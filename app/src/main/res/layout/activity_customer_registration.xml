<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerRegistration">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/cust_textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="40dp"
                    android:gravity="center"
                    android:textColor="#8BC34A"
                    android:text="Customer Registration" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cust_name2_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/cust_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_baseline_verified_user_24"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:background="@color/white"
                        android:hint="Enter Name" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cust_pass2_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/cust_psw2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_baseline_password_24"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Enter Password"
                        android:textColorHighlight="#7cff88"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cust_repass2_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/cust_repsw2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_baseline_password_24"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Re-Enter Password"
                        android:textColorHighlight="#7cff88"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cust_mob2_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:counterTextAppearance="@style/counterText"
                    app:counterOverflowTextAppearance="@style/counterOverride"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/cust_mob2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_baseline_mobile_friendly_24"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Mobile Number"
                        android:textColorHighlight="#7cff88"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cust_datedonate2_text_input_layout"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"

                        android:layout_marginRight="0dp">

                        <EditText
                            android:id="@+id/cust_date_donate2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/ic_baseline_update_24"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:hint="Previously donated date"
                            android:textColorHighlight="#7cff88"
                            android:background="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cust_date_donate_btn2"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="Last Donated Date" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cust_time2_text_input_layout"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp">

                        <EditText
                            android:id="@+id/cust_time2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/ic_baseline_access_time_24"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:hint="Time of Given"
                            android:textColorHighlight="#7cff88"
                            android:background="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cust_time_btn2"
                        android:layout_weight="1"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"
                        android:layout_marginLeft="10dp"
                        android:textAllCaps="false"
                        android:text="Select Time" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cust_bld_grp2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="30dp"
                        android:hint="Select Blood Group :"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColorHint="#8F000000"/>

                    <Spinner
                        android:id="@+id/blood_spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contextClickable="false"
                        android:defaultFocusHighlightEnabled="true"
                        android:background="#50AED581"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radio_grp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/tv_slt_gen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="0dp"
                            android:hint="Select Gender :"
                            android:layout_weight="1.1"
                            android:textColorHint="#8F000000"/>


                        <RadioButton
                            android:id="@+id/r1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1.3"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/r2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1.3"
                            android:text="Female" />

                        <RadioButton
                            android:id="@+id/r3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1.3"
                            android:text="Others" />

                    </RadioGroup>

                </LinearLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cust_loc2_text_input_layout"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/cust_loc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_baseline_location_on_24"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Location"
                        android:textColorHighlight="#7cff88"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>


                <CheckBox
                    android:id="@+id/cust_checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="I Agree" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cust_back_btn2"
                        android:onClick="cust_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="60dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button"
                        android:text="Back" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cust_sub_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button"
                        android:text="Submit" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>